<% layout("layouts/boilerplate.ejs") -%>

<section class="page page-auth">
  <div class="auth-card">
    <h1>Edit Username</h1>

    <form action="/profile/edit" method="POST" class="form-vertical" novalidate>
      <div class="form-field">
        <label for="username">New Username</label>
        <input
          id="username"
          name="username"
          type="text"
          placeholder="Enter new username"
          value="<%= user.username %>"
          required
        />
      </div>

      <div class="form-actions">
        <button type="submit" class="btn-primary">Update Username</button>
        <a href="/profile" class="btn-outline" style="margin-left: 0.75rem;">Cancel</a>
      </div>
    </form>
  </div>
</section>

