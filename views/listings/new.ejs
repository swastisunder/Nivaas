<% layout("layouts/boilerplate.ejs") -%>
<div class="row">
  <div class="col-8 offset-2">
    <h1>Create a New Listing</h1>
    <br />
    <form action="/listings" method="POST" novalidate class="needs-validation">
      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Title *</label>
        <input
          id="title"
          type="text"
          name="title"
          placeholder="Add a catchy title"
          required
          class="form-control"
        />
        <div class="valid-feedback">Title looks good.</div>
        <div class="invalid-feedback">Enter a title.</div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description *</label>
        <textarea
          id="description"
          name="description"
          placeholder="Description"
          required
          class="form-control"
        ></textarea>
        <div class="valid-feedback">Description added.</div>
        <div class="invalid-feedback">Add a short description.</div>
      </div>

      <!-- Image URL -->
      <div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
        <input
          id="image"
          type="text"
          name="image"
          placeholder="Image URL"
          class="form-control"
        />
        <div class="valid-feedback">Image link looks fine.</div>
        <div class="invalid-feedback">Enter a valid image URL.</div>
      </div>

      <!-- Price, Location, Country -->
      <div class="row">
        <div class="mb-3 col-4">
          <label for="price" class="form-label">Price *</label>
          <input
            id="price"
            type="number"
            name="price"
            min="500"
            placeholder="Minimum 500"
            required
            class="form-control"
          />
          <div class="valid-feedback">Price set.</div>
          <div class="invalid-feedback">Enter a price.</div>
        </div>

        <div class="mb-3 col-4">
          <label for="location" class="form-label">Location *</label>
          <input
            id="location"
            type="text"
            name="location"
            placeholder="Surat, Gujarat"
            required
            class="form-control"
          />
          <div class="valid-feedback">Location added.</div>
          <div class="invalid-feedback">Enter location.</div>
        </div>

        <div class="mb-3 col-4">
          <label for="country" class="form-label">Country *</label>
          <input
            id="country"
            type="text"
            name="country"
            placeholder="India"
            required
            class="form-control"
          />
          <div class="valid-feedback">Country noted.</div>
          <div class="invalid-feedback">Enter country name.</div>
        </div>
      </div>

      <!-- Submit -->
      <div>
        <br />
        <button type="submit" class="btn btn-dark add-btn">
          Create New Listing
        </button>
        <br /><br /><br />
      </div>
    </form>
  </div>
</div>
