<% layout("layouts/boilerplate.ejs") -%>

<div class="row">
  <div class="col-8 offset-2">
    <h1>Create a New Listing</h1>
    <br />

    <form
      action="/listings"
      method="POST"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Title *</label>
        <input
          id="title"
          type="text"
          name="title"
          placeholder="Add a catchy title"
          required
          class="form-control"
        />
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description *</label>
        <textarea
          id="description"
          name="description"
          placeholder="Description"
          required
          class="form-control"
        ></textarea>
      </div>

      <!-- Categories -->
      <div class="mb-3">
        <label class="form-label">Select Categories</label>

        <div class="category-container">
          <% categories.forEach(function(cat) { %>
          <label class="category-option">
            <input type="checkbox" name="categories" value="<%= cat %>" />
            <span><%= cat %></span>
          </label>
          <% }) %>
        </div>
      </div>

      <!-- Image -->
      <div class="mb-3">
        <label for="image" class="form-label">Upload Listing Image</label>
        <input
          id="image"
          type="file"
          name="listing[image]"
          class="form-control"
          required
        />
      </div>

      <!-- Price, Location, Country -->
      <div class="row">
        <div class="mb-3 col-4">
          <label for="price" class="form-label">Price *</label>
          <input
            id="price"
            type="number"
            name="price"
            min="500"
            placeholder="Minimum 500"
            required
            class="form-control"
          />
        </div>

        <div class="mb-3 col-4">
          <label for="location" class="form-label">Location *</label>
          <input
            id="location"
            type="text"
            name="location"
            placeholder="Surat, Gujarat"
            required
            class="form-control"
          />
        </div>

        <div class="mb-3 col-4">
          <label for="country" class="form-label">Country *</label>
          <input
            id="country"
            type="text"
            name="country"
            placeholder="India"
            required
            class="form-control"
          />
        </div>
      </div>

      <!-- Submit -->
      <div>
        <br />
        <button type="submit" class="btn btn-dark add-btn">
          Create New Listing
        </button>
        <br /><br /><br />
      </div>
    </form>
  </div>
</div>
