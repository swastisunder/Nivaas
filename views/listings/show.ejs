<% layout("layouts/boilerplate.ejs") -%>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
      <div
        class="card shadow rounded-4 overflow-hidden listing-card"
        style="border: none"
      >
        <!-- Header -->
        <div class="py-3 px-4 d-flex align-items-center bg-white border-bottom">
          <div
            class="me-3"
            style="
              width: 6px;
              height: 32px;
              background: #dc3545;
              border-radius: 4px;
            "
          ></div>
          <h3 class="fw-bold mb-0" style="letter-spacing: -0.3px">
            <%= listing.title %>
          </h3>
        </div>

        <!-- Main Image -->
        <img
          src="<%= listing.image.url %>"
          class="card-img-top show-img"
          style="object-fit: cover; max-height: 420px; border-radius: 0"
          alt="<%= listing.title %>"
        />

        <!-- Body -->
        <div class="card-body p-4">
          <p>Owned by: <i><%= listing.owner.username %></i></p>

          <p class="card-text mb-4 text-muted" style="font-size: 1.05rem">
            <%= listing.description %>
          </p>

          <div class="mb-3">
            <h4 class="mb-1 text-danger fw-bold" style="font-size: 1.7rem">
              â‚¹<%= listing.price.toLocaleString('en-IN') %>
            </h4>
            <p class="text-secondary mb-0">
              <i class="bi bi-geo-alt-fill text-danger"></i>
              <%= listing.location %>, <%= listing.country %>
            </p>
          </div>

          <!-- Buttons: Edit/Delete -->
          <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
          <div class="d-flex gap-3 mt-4">
            <a
              href="/listings/<%= listing._id %>/edit"
              class="btn update-btn text-white px-4 rounded-pill fw-semibold"
              style="background: #dc3545; border: none"
            >
              <i class="bi bi-pencil-square me-1"></i> Edit
            </a>

            <form
              action="/listings/<%= listing._id %>?_method=DELETE"
              method="POST"
            >
              <button
                type="submit"
                class="btn btn-outline-danger px-4 rounded-pill fw-semibold"
                style="border-width: 2px"
              >
                <i class="bi bi-trash me-1"></i> Delete
              </button>
            </form>
          </div>
          <% } %>

          <hr class="my-5" />

          <!-- Review Section -->
          <div class="col-10 mx-auto">
            <% if (currUser) { %>
            <form
              action="/listings/<%= listing._id %>/reviews"
              method="POST"
              novalidate
              class="needs-validation"
            >
              <h2 class="fw-semibold mb-4 text-center">Leave a Review</h2>

              <!-- Rating -->
              <div class="mb-3">
                <label class="form-label fw-semibold" for="rating"
                  >Rating</label
                >

                <fieldset class="starability-slot">
                  <input
                    type="radio"
                    id="no-rate"
                    class="input-no-rate"
                    name="review[rating]"
                    value="1"
                    checked
                    aria-label="No rating."
                  />

                  <input
                    type="radio"
                    id="first-rate1"
                    name="review[rating]"
                    value="1"
                  />
                  <label for="first-rate1" title="Terrible">1 star</label>

                  <input
                    type="radio"
                    id="first-rate2"
                    name="review[rating]"
                    value="2"
                  />
                  <label for="first-rate2" title="Not good">2 stars</label>

                  <input
                    type="radio"
                    id="first-rate3"
                    name="review[rating]"
                    value="3"
                  />
                  <label for="first-rate3" title="Average">3 stars</label>

                  <input
                    type="radio"
                    id="first-rate4"
                    name="review[rating]"
                    value="4"
                  />
                  <label for="first-rate4" title="Very good">4 stars</label>

                  <input
                    type="radio"
                    id="first-rate5"
                    name="review[rating]"
                    value="5"
                  />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
              </div>

              <!-- Comment -->
              <div class="mb-3">
                <label class="form-label fw-semibold" for="comment"
                  >Comments</label
                >
                <textarea
                  class="form-control shadow-sm"
                  name="review[comment]"
                  id="comment"
                  rows="4"
                  required
                ></textarea>
                <div class="invalid-feedback">
                  Please add some comments for review
                </div>
              </div>

              <div class="text-center">
                <button class="btn btn-dark px-5 py-2 rounded-pill fw-semibold">
                  Submit
                </button>
              </div>
            </form>

            <hr />
            <% } %>

            <!-- All Reviews -->
            <% if(listing.reviews.length>0){ %>
            <div class="row">
              <p><b>All Reviews</b></p>
              <% for(review of listing.reviews) { %>
              <div class="card col-5 ms-3 mb-3">
                <div class="card-body">
                  <div class="card-title">@<%= review.author.username %></div>
                  <div class="card-text"><%= review.comment %></div>
                  <p
                    class="starability-result card-text"
                    data-rating="<%= review.rating %>"
                  ></p>
                </div>

                <% if (currUser && currUser._id.equals(review.author._id)) { %>
                <form
                  class="mb-3"
                  method="POST"
                  action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                >
                  <button class="btn btn-sm btn-danger">Delete</button>
                </form>
                <% } %>
              </div>
              <% } %>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
