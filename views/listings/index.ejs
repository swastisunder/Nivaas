<% layout("layouts/boilerplate.ejs") -%>

<section class="page page-index">
  <!-- CATEGORY FILTER BAR -->
  <div class="filters-bar" id="filters">
    <a
      href="/listings"
      class="filter-pill <%= !selectedCategory ? 'is-active' : '' %>"
    >
      <div class="filter-icon">
        <i class="fa-solid fa-border-all"></i>
      </div>
      <p>All</p>
    </a>

    <% Object.keys(categories).forEach(function(cat) { %>
    <a
      href="/listings?category=<%= encodeURIComponent(cat) %>"
      class="filter-pill <%= selectedCategory === cat ? 'is-active' : '' %>"
    >
      <div class="filter-icon">
        <i class="fa-solid <%= categories[cat] %>"></i>
      </div>
      <p><%= cat.charAt(0).toUpperCase() + cat.slice(1) %></p>
    </a>
    <% }) %>
  </div>

  <!-- LISTINGS GRID -->
  <div class="listings-grid">
    <% if (noResults) { %>
    <div class="empty-state">
      <h2>No listings found</h2>
      <p>Try changing filters or search query.</p>
    </div>
    <% } else { %>
    <% for (const listing of listings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <article class="listing-card">
        <div class="listing-image-wrapper">
          <img
            src="<%= listing.image.url %>"
            class="listing-image"
            alt="Listing image"
          />
        </div>
        <div class="listing-content">
          <h3 class="listing-title"><%= listing.title %></h3>
          <p class="listing-price">
            â‚¹<%= listing.price.toLocaleString('en-IN') %>
            <span>/ night</span>
          </p>
        </div>
      </article>
    </a>
    <% } %>
    <% } %>
  </div>
</section>
